{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:jest/recommended"],
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "func-names": ["error", "never"],
    "no-await-in-loop": 0,
    "no-console": 0,
    "no-use-before-define": ["error", { "functions": false }],
    "class-methods-use-this": 0
  }
}
